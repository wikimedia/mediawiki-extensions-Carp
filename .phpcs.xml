<?xml version="1.0"?>
<ruleset>
	<rule ref="./vendor/mediawiki/mediawiki-codesniffer/MediaWiki">
		<exclude name="Generic.Arrays.DisallowLongArraySyntax.Found" />
		<exclude name="Generic.Files.LineLength.TooLong" />
		<exclude name="Generic.WhiteSpace.DisallowSpaceIndent.SpacesUsed" />
		<exclude name="MediaWiki.Commenting.FunctionComment.DirectionParam" />
		<exclude name="MediaWiki.Commenting.FunctionComment.MissingParamName" />
		<exclude name="MediaWiki.Commenting.FunctionComment.NotPunctuationReturn" />
		<exclude name="MediaWiki.Commenting.FunctionComment.NotShortBoolParam" />
		<exclude name="MediaWiki.Commenting.FunctionComment.NotShortIntParam" />
		<exclude name="MediaWiki.Commenting.FunctionComment.SpacingAfterParamName" />
		<exclude name="MediaWiki.Commenting.FunctionComment.SpacingAfterParamType" />
		<exclude name="MediaWiki.Commenting.FunctionComment.SpacingBeforeReturnType" />
		<exclude name="MediaWiki.Commenting.FunctionComment.SpacingDocTag" />
		<exclude name="MediaWiki.Commenting.FunctionComment.SyntaxAlignedDocClose" />
		<exclude name="MediaWiki.Commenting.FunctionComment.SyntaxCloseTag" />
		<exclude name="MediaWiki.Files.ClassMatchesFilename.NotMatch" />
		<exclude name="MediaWiki.NamingConventions.ValidGlobalName.wgPrefix" />
		<exclude name="MediaWiki.VariableAnalysis.UnusedGlobalVariables.UnusedGlobal$firephp" />
		<exclude name="MediaWiki.WhiteSpace.DisallowEmptyLineFunctions.NoEmptyLine" />
		<exclude name="MediaWiki.WhiteSpace.MultipleEmptyLines.MultipleEmptyLines" />
		<exclude name="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.NewLineComment" />
		<exclude name="MediaWiki.WhiteSpace.SpaceBeforeSingleLineComment.SingleSpaceBeforeSingleLineComment" />
		<exclude name="PSR2.Methods.FunctionClosingBrace.SpacingBeforeClose" />
		<exclude name="PSR2.Methods.MethodDeclaration.StaticBeforeVisibility" />
		<exclude name="Squiz.WhiteSpace.LanguageConstructSpacing.IncorrectSingle" />
		<exclude name="Squiz.WhiteSpace.ScopeClosingBrace.Indent" />
	</rule>
	<file>.</file>
	<arg name="extensions" value="php,php5,inc"/>
	<arg name="encoding" value="UTF-8"/>
</ruleset>
